{% extends "library_template.html.twig" %}

{% block one %}

    <h2>Add a book</h2>

    <form action="/add-book" method="post">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" name="title" placeholder="It">
        </div>

        <button type="submit" class="btn btn-info">Submit</button>
    </form><br>

    <h3>Books</h3>
    {% if books is not empty %}
        <ul>
        {% for book in books %}
                <li><a href="/book/{{book.getId}}">{{book.getTitle}}</a></li>
        {% endfor %}
        </ul>
    {% else %}
        <p>There are no books in the library!</p>
    {% endif %}

{% endblock %}

{% block two %}

    <h2>Add an author</h2>

    <form action="/add-author" method="post">
        <div class="form-group">
            <label for="name">Author:</label>
            <input type="text" name="name" placeholder="Stephen King">
        </div>

        <button type="submit" class="btn btn-info">Submit</button>
    </form><br>

    <h3>Authors</h3>

    {% if authors is not empty %}
        <ul>
        {% for author in authors %}
            <li><a href="/author/{{author.getId}}">{{author.getName}}</a></li>
        {% endfor %}
        </ul>
    {% else %}
        <p>There are no authors listed!</p>
    {% endif %}

{% endblock %}
